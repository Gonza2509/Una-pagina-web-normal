@font-face {
  font-family: 'iconos';
  src:  url('../fonts/icomoon.eot?r5x2hv');
  src:  url('../fonts/icomoon.eot?r5x2hv#iefix') format('embedded-opentype'),
    url('../fonts/icomoon.ttf?r5x2hv') format('truetype'),
    url('../fonts/icomoon.woff?r5x2hv') format('woff'),
    url('../fonts/icomoon.svg?r5x2hv#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

a
	color #DD4F24
	
aside
	background #555555
		
	.twitter-timeline
		display inline-block
	
body
	background #E8E8E8 
	color #444
	font-family Arial
	font-size 16px
	transition font-size 2s

footer
	background #DD4F24
	color rgba(white, 0.5)
	text-align center
	padding 1em 0
	width 100%
	
	h3
		font-size 14px
		font-weight normal
		
		strong
			display block
			
		.mejor
			&:before
			&:after
				content " - "
	
form 
	padding 0.8em
	display none
	
	label
		display inline-block
		width 60px

header
	background #444
	box-shadow 0.5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5 em
	position relative
	z-index 1
	
	
	.logo
		border-right 1px solid #22BCE0
		float left
		width 60px

		img 
			width 52px
			

	.titular
		margin 0 60px 0 70px
		
		.filtro
			color #22BCE0
			font-size 1.1em
			text-decoration none
			font-weight bold
			font-style italic
			
		.publicar
			background #DD4F24
			color white
			padding 0.2em 0.5em
			text-decoration none
			font-style italic
			text-shadow 1px 1px 0px black
			float right
			margin -5px 1em 0 0
			
			&:before
				content: "\e908"
				display inline-block
				font-family "iconos"
				margin 0 3px 0 0
		
			
		.titulo
			font-size 1.1em
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 2
			img
				width 50px
				border-radius 50%
				
		.flechita
			background #DD4F24
			color white
			display block
			padding 2px
			position absolute
			right 0
			top 15px
			text-decoration none
			text-align right
			width 50%
			z-index 0
			
			&:after
				display inline-block
				content "\f05b"
				font-family "iconos"
				text-shadow 1px 1px 0px black

nav
	background #22BCE0
	border-left 15px solid white
	position relative
	
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content""
		left 0
		position absolute
		top 0
		

	.menu
		height 40px
		line-height 40px
		margin 0
		overflow-x auto
		padding 0
		white-space nowrap
		li
			display inline-block
			
			a 
				color white
				display inline-block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none




.posts
	padding 0.5em
	
	.post 
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black 0.5)
		color #7A7A7A
		margin-bottom 1em
		display inline-block
			
	.acciones
		border-top 3px solid #22BCE0
		padding 0.5em
		overflow hidden
			

		.datos
			float right

			.comentarios
				background #444
				border-radius 3px
				color white
				margin 0 1em 0 0
				padding 2px 5px
				text-decoration none
					
			.estrellita
				text-decoration none
					
				&:after
					color #E0D561
					content: "\e9d7"
					font-family "iconos"
						
						

		.votos
			float left
				
			.down
			.up
				text-decoration none

			.down
				color red
				&:before
					content "\f05b"
					font-size 1.5em
					font-family "iconos"
					vertical-align bottom
					
			.up
				color green	
				&:before
					content: "\f0aa"
					font-size 1.5em
					font-family "iconos"
					vertical-align bottom


	.descripcion
		color #7A7A7A
			
		.detalles
			height 160px
			margin-left 130px
				
			.autor
				margin 0.5em 0 2em 0
					

			.fecha 
				float right
				margin 0 1em 0 0
			.tag 
				background #22BCE0
				border-radius 0.5em
				color white
				padding 0.2em 0.5em
				text-decoration none

			.titulo
				color #444
				font-size 1.1em
				font-style italic
				margin 0
				padding 0.5em 0.5em 0 0
				
			
		.imagen
			float left
			margin 0 0 0 0
			img 
				height 160px
				vertical-align top
				width 120px
				


@media screen and (min-width: 768px)

	header
		.titular
			.publicar
				padding-left 3em
				position relative
				
				&:before
					left 0
					font-size 2.5em
					position absolute
					top -10px


	.posts	
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%
		
